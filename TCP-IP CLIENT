# A TCP/IP CLIENT THAT RECIEVES MESSAGES FROM SERVER
import socket
#TAKE THE SERVER NAME AND THE PORT NAME
host = 'localhost'
port = 5000
#CREATING A CLIENT SIDE SOCKET USING TCP/IP PROTOCOLS
s = socket.socket()
#CONNECT TO SERVER AND PORT NUMBER USING CONNECT() METHOD
s.connect((host,port))

#RECIEVING STRING MESSAGES FROM SERVER AS A 1024B DATA
msg = s.recv(1024)

#REPEAT AS LONG AS MESSAGE STRINGS ARE NOT EMPTY
while msg:
    print("Received: "+msg.decode())
    msg = s.recv(1024)

# DISCONNECT THE CLIENT
s.close()
